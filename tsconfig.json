{
	"compilerOptions": {
		"module": "es6",
		"target": "es6",
		"noEmit": true,
		"noEmitHelpers": true,
		"sourceMap": false,
		"lib": [
			"ES6",
			"dom",
			"dom.iterable",
			"es2015",
			"es2016",
			"es2017",
			"es2018",
			"esnext"
		],
		"resolveJsonModule": true,
		"allowJs": true,
		"jsx": "react",
		"importHelpers": true,
		"downlevelIteration": true,
		"isolatedModules": true,
		/* Strict Type-Checking Options */
		"strict": true,
		/* Additional Checks */
		// 有未使用的临时变量时提示错误
		"noUnusedLocals": true,
		// 有未使用的函数形参时提示错误
		"noUnusedParameters": true,
		// 函数有未返回值的分支时提示错误
		"noImplicitReturns": true,
		// switch 语句块无默认分支时提示错误
		"noFallthroughCasesInSwitch": true,
		/* Module Resolution Options */
		"moduleResolution": "node",
		// 允许从没有默认导出的模块中默认导入，这不影响代码发出，只是去掉类型检查
		"allowSyntheticDefaultImports": true,
		// 为 CommonJS 模块导出自动设置 default 属性，开启之后会自动开启 allowSyntheticDefaultImports 选型
		"esModuleInterop": true,
		/* Experimental Options */
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		/* Advanced Options */
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src",
		"test",
		"builder",
		".eslintrc.js",
		"jest.config.js",
		"jest.setup.js",
		"app.js"
	],
	"exclude": ["dist", "node_modules"]
}
